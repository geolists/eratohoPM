;--------------------------------------------------
;美麗イベント
;--------------------------------------------------
@EVENT_BIREI
DRAWLINE

;Lv0
IF PALAM_LV(BASE:美麗) == 0
	SELECTCASE RAND:4
		CASE 0
			LOCAL = 1
		CASE 1
			LOCAL = 2
		CASE 2
			LOCAL = 3
		CASE 3
			LOCAL = 4
	ENDSELECT
;Lv1
ELSEIF PALAM_LV(BASE:美麗) == 1
	SELECTCASE RAND:4
		CASE 0
			LOCAL = 1
		CASE 1
			LOCAL = 5
		CASE 2
			LOCAL = 6
		CASE 3
			LOCAL = 7
	ENDSELECT
;Lv2
ELSEIF PALAM_LV(BASE:美麗) == 2
	SELECTCASE RAND:4
		CASE 0
			LOCAL = 1
		CASE 1
			LOCAL = 8
		CASE 2
			LOCAL = 9
		CASE 3
			LOCAL = 10
	ENDSELECT
;Lv3
ELSEIF PALAM_LV(BASE:美麗) == 3
	SELECTCASE RAND:4
		CASE 0
			LOCAL = 1
		CASE 1
			LOCAL = 11
		CASE 2
			LOCAL = 12
		CASE 3
			LOCAL = 13
	ENDSELECT
ENDIF
CALLFORM EVENT_BIREI_{LOCAL}
PRINTFORM 美麗　{BASE:美麗}　+　{RESULT}　→　
BASE:美麗 += RESULT
PRINTFORMW {BASE:美麗}

CALL UP_STATUS

