;--------------------------------------------
;入手アイテム決定処理
;--------------------------------------------
@NIGHT_DECOY_GET_ITEM

;入手するアイテムID
#DIM get_item, 1

;50％：強化アイテム×2個
;30％：武者修行用アイテム
;20％：職業専用アイテム

IF RAND(1, 100) <= 50
	get_item = 522 + RAND:5
	LOCAL = 2
ELSEIF RAND(1, 50) <= 30
	get_item = 601 + RAND:2
	LOCAL = 1
ELSE
	;アクセサリーの部位をRANDで分ける
	SELECTCASE RAND:3
		CASE 0
			get_item = 404 + RAND:4
		CASE 1
			get_item = 414 + RAND:4
		CASE 2
			get_item = 424 + RAND:4
	ENDSELECT
	LOCAL = 1
ENDIF

PRINTFORML %ITEMNAME:get_item%を{LOCAL}個手に入れた！

ITEM:get_item += LOCAL

RETURN 0


