	;3回目のイベント　4年目の9月上旬
	ELSEIF FLAG:年数 == 4 && DAY == 9 && TIME == 0 && GETBIT(FLAG:サグメイベント管理, 1)
		CALL SAGUME_EVENT, 3
	;4回目のイベント　5年目の10月上旬
	ELSEIF FLAG:年数 == 5 && DAY == 10 && TIME == 0 && GETBIT(FLAG:サグメイベント管理, 2)
		CALL SAGUME_EVENT, 4
	ENDIF
ENDIF

