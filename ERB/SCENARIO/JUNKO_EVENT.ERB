;=====================================================
;純化イベント
;純化の光を浴びせて、現在着ている服の属性％を上昇させる
;=====================================================
@JUNKO_ELEMENT_EVENT
;属性に対応したビットを格納するための変数
#DIM bit_element, 1

DRAWLINE
PRINTFORML %CALLNAME:TARGET%は偶然にも純狐と遭遇した
PRINTFORML 「貴方の心……まだ迷いがあるみたいね」
PRINTFORML 「迷いを無くす"お手伝い"をしてあげるわ」
PRINTFORMW 純狐の掌から眩い光が放射され、%CALLNAME:TARGET%に浴びせられる……

;予め、服装の属性を取得しておく
CALL CLOTHE_ABL, "属性"

;今着ている服が属性を持たない場合
IF !RESULT
	PRINTFORML 
	PRINTFORML しかし、%CALLNAME:TARGET%は平気な顔をしている
	PRINTFORML 「あれ……どうして効かないの……？」
	PRINTFORML 「仕方ないわね。また次会う時を楽しみにしていなさい」
	PRINTFORMW 純狐は悔しそうな表情を浮かべ、この場を後にした
;[純化寸前]の素質を持っている場合、純化処理を行う
ELSEIF TALENT:純化寸前
	PRINTFORML 
	PRINTFORML 光が収まった時、%CALLNAME:TARGET%の様子は一変していた
	PRINTFORML 言葉遣いが全く異なり、感じられる雰囲気が今までとは全く違う
	PRINTFORML 「ふふ、これで完全に迷いがなくなったようね」
	PRINTFORML 「心の迷いは穢れの前触れなのよ。じゃあね」
	PRINTFORMW 純狐は戸惑う%CALLNAME:TARGET%を放置して、この場を後にした
	
	;最も％が高い属性への純化処理を行う
	LOCAL = MAXARRAY(CFLAG, 220, 228)
	LOCAL = FINDELEMENT(CFLAG, LOCAL, 220, 228)
	LOCAL -= 220
	
	;属性に応じた素質を取得
	CALL ELEMENT_CONVERT, LOCAL
	TALENT:STR = 1
	
	;習慣職業・レベルも該当する属性のものに統一する
	;属性に対応したビットをELEMENT_CONVERT_BITで取得する
	CALL ELEMENT_CONVERT_BIT, LOCAL
	bit_element = RESULT
	
	FOR COUNT, 0, 5
		CFLAG:("習慣レベル／"+LIFESTYLE_NAME(COUNT)+"") = LOCAL
		CFLAG:("習慣職業／"+LIFESTYLE_NAME(COUNT)+"") = bit_element
	NEXT
	
	FOR COUNT, 0, 8
		CALL ELEMENT_CONVERT, COUNT
		CFLAG:("属性／"+STR+"") = 0
	NEXT
	CALL ELEMENT_CONVERT, LOCAL
	CFLAG:("属性／"+STR+"") = 100
	
	;名称変更処理
	CALL JUNKA_NAME, LOCAL
	
	PRINTFORML 
	PRINTFORMW %CALLNAME:TARGET%は純化され、%STR%へと存在を変えた！
	FORCEWAIT
	CALLNAME:TARGET = %STR%
	TALENT:純化 = 1
	TALENT:輝夜 = 0	
ELSE
	PRINTFORML %CALLNAME:TARGET%の心境が少し変化した！
	CALL CLOTHE_ABL, "属性"
	CALL ELEMENT_CONVERT_BIT_REV, RESULT
	LOCAL = RESULT-1
	;属性IDを属性名に変換
	CALL ELEMENT_CONVERT, LOCAL
	
	CALL CHANGE_ELEMENT_OTHER, STR, 10
	
	;(呼び出した関数内でSTRが弄られている可能性が高いため)再度STRに属性名を代入させる
	CALL ELEMENT_CONVERT, LOCAL
	
	;属性％が100
	IF CFLAG:("属性／"+STR+"") >= 100
		PRINTFORML 「あら、大分迷いが無くなってきたみたいね」
		PRINTFORML 「その調子なら、次に会った時にはもう吹っ切れるのかしら」
		PRINTFORMW 純狐は期待を目に浮かばせながら、この場を後にした……
		PRINTFORML 
		PRINTFORMW %CALLNAME:TARGET%は[純化寸前]を得た
		TALENT:純化寸前 = 1
	;100になっていない場合
	ELSE
		PRINTFORML 「ふふ、少しは変わったのかしら」
		PRINTFORML 「じゃあね。これで少しでも迷いが無くなったら幸いだわ」
		PRINTFORMW 純狐はこの場を後にした……
	ENDIF
ENDIF

