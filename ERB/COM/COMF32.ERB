;-------------------------------------------------
;手芸品作り
;条件コマンド(裁縫技術が必要)
;　裁縫レベルによって入手金額が変わる
;-------------------------------------------------
@COM32

;消費CP
LOSEBASE:0 = 5

IF BASE:ＣＰ < LOSEBASE:0
	PRINTL CPが足りない
	RETURN 0
ENDIF


PRINTL 手芸品作り
STR:0 = 手芸品作り
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------

;気品-150の数値×4％が成功率
CALL SUC_PAR, (BASE:気品-150)*4

PRINTL 
IF RESULT == 1
	SOURCE:美麗 = 4
	SOURCE:家事 = 6
	TFLAG:美麗経験 = 2
	TFLAG:家事経験 = 3
ELSE
	SOURCE:美麗 = 1
	SOURCE:家事 = 2
	TFLAG:美麗経験 = 1
	TFLAG:家事経験 = 2
ENDIF

;技術点を上昇させる
CALL NEEDLE_UP, 30

;金銭の入手
CALL CAL_MONEY, 32

RETURN 1

