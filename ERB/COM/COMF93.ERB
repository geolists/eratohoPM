;-------------------------------------------------
;野外対面立位
;体力コマンド
;　体力が300以上あると行える。疎通と体力を鍛えることができるかなり優秀なコマンド
;-------------------------------------------------
@COM93

;消費CP
LOSEBASE:0 = 7

IF BASE:ＣＰ < LOSEBASE:0
	PRINTL CPが足りない
	RETURN 0
ENDIF


PRINTL 野外対面立位
STR:0 = 野外対面立位
;成功率
CALL SUC_PAR, (BASE:スタミナ+(BASE:体力+BASE:淫妖)/2)-700
TFLAG:成功 = RESULT

CALL KOJO_MESSAGE_COM, LOCAL

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------


PRINTL 
IF LOCAL == 1
	SOURCE:体力 = 7
	SOURCE:淫妖 = 11
	
	TFLAG:体力経験 = 6
	TFLAG:淫妖経験 = 8
	
	TFLAG:背徳経験 = 5

	LOSEBASE:主人への友好度 = 4

	;アライメント
	LOSEBASE:アライメント = -2
	
ELSE
	SOURCE:体力 = 4
	SOURCE:淫妖 = 1
	
	TFLAG:体力経験 = 3
	TFLAG:淫妖経験 = 1
	
	TFLAG:背徳経験 = 1
	;アライメント
	LOSEBASE:アライメント = -1
ENDIF


RETURN 1

