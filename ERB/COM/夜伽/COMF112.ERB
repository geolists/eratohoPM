;-------------------------------------------------
;自慰
;夜伽コマンド（中級）
;　淫妖が50以上
;　相手の快楽を99で止める
;-------------------------------------------------
@COM112

;消費CP
LOSEBASE:0 = 0

IF BASE:ＣＰ < LOSEBASE:0
	PRINTL CPが足りない
	RETURN 0
ENDIF

PRINTL 焦らし
STR:0 = 焦らし
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------

;獲得基礎能力
SOURCE:快楽 = 3
SOURCE:興奮 = 3
SOURCE:不快 = 4

;獲得経験
;快楽が90以上の場合
IF BASE:快楽 >= 90
	TFLAG:背徳経験 = 5
	TFLAG:淫妖経験 = 5
ELSE
	TFLAG:背徳経験 = 3
	TFLAG:淫妖経験 = 3
ENDIF

LOSEBASE:主人への友好度 = 2

TFLAG:焦らし = 1

RETURN 1

