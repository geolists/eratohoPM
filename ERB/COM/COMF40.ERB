;消費CP
LOSEBASE:0 = 1

IF BASE:ＣＰ < LOSEBASE:0
	PRINTL CPが足りない
	RETURN 0
ENDIF

PRINTL 綿月姉妹と会話
STR:0 = 綿月姉妹と会話
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------

;(常識-50)/2+話術-100の数値×5％が成功率
CALL SUC_PAR, ((BASE:常識-50)/2+BASE:話術-100)*5

PRINTL 
IF RESULT == 1
	SOURCE:疎通 = 3
	TFLAG:疎通経験 = 2
	LOSEBASE:姉妹への友好度 = 1
	LOSEBASE:アライメント += 1
ELSE
	SOURCE:疎通 = 2
	TFLAG:疎通経験 = 1
ENDIF

RETURN 1

