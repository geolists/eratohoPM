;-------------------------------------------------
;姉妹と一緒にでかける
;発展コマンド
;　姉妹への友好度が50以上
;-------------------------------------------------
@COM44

;消費CP
LOSEBASE:0 = 15

IF BASE:ＣＰ < LOSEBASE:0
	PRINTL CPが足りない
	RETURN 0
ENDIF

PRINTL 姉妹と一緒にでかける
STR:0 = 姉妹と一緒にでかける
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------

;(話術+常識-200)/2+姉妹への友好度の数値×0.50％が成功率
CALL SUC_PAR, ((BASE:話術+BASE:常識-200)/2+CFLAG:姉妹への友好度)/2

PRINTL 
IF RESULT == 1
	SOURCE:知力 = 6
	SOURCE:美麗 = 6
	SOURCE:疎通 = 9
	TFLAG:知力経験 = 4
	TFLAG:美麗経験 = 4
	TFLAG:疎通経験 = 6
	LOSEBASE:アライメント = 1
	LOSEBASE:姉妹への友好度 = 3
ELSE
	LOSEBASE:アライメント = 1
	LOSEBASE:姉妹への友好度 = 3
ENDIF

IF TFLAG:誘拐度 < 3
	TFLAG:誘拐度 = 2
ENDIF

;1回の教育で1度しか使えない
TFLAG:姉妹と出かける = 1

RETURN 1

