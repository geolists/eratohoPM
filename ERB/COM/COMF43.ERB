;-------------------------------------------------
;姉妹と着付け
;発展コマンド
;　姉妹への友好度が30以上
;-------------------------------------------------
@COM43

;消費CP
LOSEBASE:0 = 4

IF BASE:ＣＰ < LOSEBASE:0
	PRINTL CPが足りない
	RETURN 0
ENDIF

PRINTL 姉妹と着付け
STR:0 = 姉妹と着付け
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------

;(300-プライド)/4+姉妹への友好度の数値×1％が成功率
CALL SUC_PAR, ((300-BASE:プライド)/4+CFLAG:姉妹への友好度)*1

PRINTL 
IF RESULT == 1
	SOURCE:美麗 = 3
	SOURCE:疎通 = 2
	TFLAG:美麗経験 = 2
	TFLAG:疎通経験 = 2
	LOSEBASE:アライメント = 1
	LOSEBASE:姉妹への友好度 = 2
ELSE
	LOSEBASE:アライメント = 1
	LOSEBASE:姉妹への友好度 = 1
ENDIF


RETURN 1

