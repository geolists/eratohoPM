;-------------------------------------------------
;淫具挿入
;バイブを挿入する
;-------------------------------------------------
@COM235_T

PRINTL 淫具挿入
STR:0 = 淫具挿入
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費CP
;LOSEBASE:0 = 10

;獲得基礎能
SOURCE:淫妖 = 12
SOURCE:堕落 = 3

;獲得経験
TFLAG:淫妖経験 = 6
TFLAG:堕落経験 = 2

;アライメント
LOSEBASE:アライメント = 0

;装飾品がバイブで上書きされる

;既にその他がバイブ系で埋まっている場合、その他2を見る
IF CFLAG:日用品／その他 == 500 || CFLAG:日用品／その他 == 507
	IF CFLAG:日用品／その他2 != 507 && CFLAG:日用品／その他2 != 500
		IF CFLAG:日用品／その他 == 507
			CFLAG:日用品／その他2 = 500
		ELSE
			CFLAG:日用品／その他2 = 507
		ENDIF
	ENDIF
ELSE
	;既にバイブが挿入されている場合、代わりにアナルバイブを挿入する
	IF CFLAG:日用品／その他 == 500
		CFLAG:日用品／その他 = 507
	ELSE
		CFLAG:日用品／その他 = 500
	ENDIF
ENDIF

RETURN 1

