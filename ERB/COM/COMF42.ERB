;-------------------------------------------------
;姉妹と共に授業を受ける
;発展コマンド
;　姉妹への友好度が10以上
;-------------------------------------------------
@COM42

;消費CP
LOSEBASE:0 = 3

IF BASE:ＣＰ < LOSEBASE:0
	PRINTL CPが足りない
	RETURN 0
ENDIF

PRINTL 姉妹と共に授業を受ける
STR:0 = 姉妹と共に授業を受ける
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------

;思考力-50/2+姉妹への友好度の数値×1％が成功率
CALL SUC_PAR, ((BASE:思考力-50)/2+CFLAG:姉妹への友好度)*1

PRINTL 
IF RESULT == 1
	SOURCE:知力 = 3
	SOURCE:疎通 = 2
	TFLAG:知力経験 = 2
	TFLAG:疎通経験 = 2
	LOSEBASE:アライメント = 1
	LOSEBASE:姉妹への友好度 = 2
ELSE
	LOSEBASE:アライメント = 1
	LOSEBASE:姉妹への友好度 = 1
ENDIF

RETURN 1

