;-------------------------------------------------
;姉妹と特訓
;発展コマンド
;　姉妹への友好度が50以上
;体力と疎通の双方を上昇させることができる
;-------------------------------------------------
@COM45

;消費CP
LOSEBASE:0 = 7

IF BASE:ＣＰ < LOSEBASE:0
	PRINTL CPが足りない
	RETURN 0
ENDIF

PRINTL 姉妹と特訓
STR:0 = 姉妹と特訓
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------

;(話術+常識-200)/2+姉妹への友好度の数値×0.50％が成功率
CALL SUC_PAR, ((BASE:話術+BASE:常識-200)/2+CFLAG:姉妹への友好度)/2

PRINTL 
IF RESULT == 1
	SOURCE:疎通 = 10
	SOURCE:体力 = 9
	TFLAG:疎通経験 = 8
	TFLAG:体力経験 = 6
	LOSEBASE:アライメント = 1
	LOSEBASE:姉妹への友好度 = 3
ELSE
	SOURCE:体力 = 4
	TFLAG:体力経験 = 3
	LOSEBASE:アライメント = 1
	LOSEBASE:姉妹への友好度 = 3
ENDIF

IF TFLAG:誘拐度 < 3
	TFLAG:誘拐度 = 2
ENDIF

RETURN 1

