;-------------------------------------------------
;お茶会に出る
;発展コマンド
;　美麗経験が40以上
;-------------------------------------------------
@COM390

;消費CP
LOSEBASE:0 = 4

IF BASE:ＣＰ < LOSEBASE:0
	PRINTL CPが足りない
	RETURN 0
ENDIF

PRINTL お茶会に出る
STR:0 = お茶会に出る
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------

;気品+プライド-200の数値×3％が成功率
CALL SUC_PAR, (BASE:気品+BASE:プライド-200)*3

PRINTL 
IF RESULT == 1
	SOURCE:美麗 = 6
	TFLAG:美麗経験 = 4
	LOSEBASE:評価 = 1
ELSE
	SOURCE:美麗 = 2
	TFLAG:美麗経験 = 3
ENDIF

;強力なコマンドだが、使えば使うほど誘拐されやすくなる
;(売春等のコマンドはデメリット持ちなので1回の教育で3～9％上がるだけで済む)
CFLAG:誘拐蓄積値 += 1

RETURN 1

