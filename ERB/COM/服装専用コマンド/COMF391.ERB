;-------------------------------------------------
;披露宴に出る
;姫様専用コマンド
;　美麗経験が40以上
;-------------------------------------------------
@COM391

;消費CP
LOSEBASE:0 = 7

IF BASE:ＣＰ < LOSEBASE:0
	PRINTL CPが足りない
	RETURN 0
ENDIF

PRINTL 披露宴に出る
STR:0 = 披露宴に出る
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------

;気品+プライド-200の数値×3％が成功率
CALL SUC_PAR, (BASE:気品+BASE:プライド-200)*3

PRINTL 
IF RESULT == 1
	SOURCE:美麗 = 9
	SOURCE:疎通 = 6
	
	TFLAG:美麗経験 = 7
	TFLAG:疎通経験 = 5
	
	LOSEBASE:評価 = 2
ELSE
	SOURCE:美麗 = 4
	SOURCE:疎通 = 2
	
	;疎通経験が入らないのは仕様
	TFLAG:美麗経験 = 5
ENDIF

;強力なコマンドだが、使えば使うほど誘拐されやすくなる
;(売春等のコマンドはデメリット持ちなので1回の教育で3～9％上がるだけで済む)
CFLAG:誘拐蓄積値 += 2

RETURN 1

