@COM601

PRINTL シスター訓練
STR:0 = シスター訓練
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費CP
LOSEBASE:0 = 2

;獲得基礎能力
SOURCE:シスター技能 = 100
;後の獲得能力は貞操によって異なる
IF BASE:貞操 < 100
	SOURCE:信仰 = 2
	SOURCE:淫妖 = 3
	
	TFLAG:信仰経験 = 1
	TFLAG:淫妖経験 = 2
ELSE
	SOURCE:信仰 = 2
	TFLAG:信仰経験 = 3
	
	LOSEBASE:アライメント = 1
ENDIF

RETURN 1

