@COM603

PRINTL 花嫁訓練
STR:0 = 花嫁訓練
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費CP
LOSEBASE:0 = 2

;獲得基礎能力
SOURCE:花嫁技能 = 100
;後の獲得能力は貞操によって異なる
IF BASE:貞操 < 100
	SOURCE:家事 = 1
	SOURCE:淫妖 = 4
	
	TFLAG:家事経験 = 1
	TFLAG:背徳経験 = 3
	TFLAG:淫妖経験 = 2
	LOSEBASE:アライメント = -1
ELSE
	SOURCE:家事 = 3
	TFLAG:家事経験 = 2
	TFLAG:背徳経験 = 1
ENDIF

RETURN 1

