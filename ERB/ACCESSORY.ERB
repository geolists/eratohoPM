;=================================================
;装飾品変更
;=================================================
@CHANGE_ACCESSORY
#DIM SET_TAG, 1
#DIM CLOTHE, 2
#DIM MODE,1
#DIM START,1
#DIM END,1
#DIM TEMP, 1
#DIM TOTAL, 1
#DIM NG, 20
#DIM CLO_ELE, 1
#DIM L_LOCAL, 1

CALL CLOTHE_ABL, "属性"
CLO_ELE = RESULT

;属性を引き出しておく

$BACK_LOOP_1
DRAWLINE
PRINTFORML どの装飾品を付け替えますか？
CALL KAREIDO

TOTAL = RESULT
CFLAG:総合華麗度 = RESULT


PRINTFORM 華麗度:
IF TOTAL > 0
	FOR LOCAL, 0, TOTAL
		SETCOLOR 255,178,64
		PRINTFORM %UNICODE(0x22C6)%
	NEXT
ELSEIF TOTAL < 0
	LOCAL:1 = TOTAL * -1
	FOR LOCAL, 0, LOCAL:1
		SETCOLOR 64,64,255
		PRINTFORM %UNICODE(0x22C6)%
	NEXT
ENDIF
RESETCOLOR
PRINTL 

REPEAT 6
	CALL CONVERT_ACCE, COUNT
	PRINTFORM [{COUNT}] - %STR,12,LEFT%
	IF !CFLAG:("日用品／"+STR+"")
		PRINTFORML :なし
	ELSE
		PRINTFORM :%ITEMNAME:(CFLAG:("日用品／"+STR+"")),16,LEFT%
		IF CFLAG:("見た目／"+STR+"") > 0
			FOR LOCAL, 0, CFLAG:("見た目／"+STR+"")
				SETCOLOR 255,178,64
				PRINT ☆
			NEXT
		ELSEIF CFLAG:("見た目／"+STR+"") < 0
			LOCAL:1 = CFLAG:("見た目／"+STR+"") * -1
			FOR LOCAL, 0, LOCAL:1
				SETCOLOR 64,64,255
				PRINT ☆
			NEXT
		ENDIF
		RESETCOLOR
		PRINTL 
	ENDIF
REND
PRINTL [999] - 戻る

$INPUT_LOOP
INPUT

IF RESULT == 999
	RETURN 1
ELSEIF RESULT <= 5
	SET_TAG = 260 + RESULT
	MODE = RESULT
ELSE
	PRINTL 不正な入力です
	GOTO INPUT_LOOP
ENDIF

$BACK_LOOP_2
DRAWLINE

CLOTHE = 0
CLOTHE:1 = 0
IF SET_TAG == 260
	REPEAT 8
		START = 400
		CLOTHE = START + COUNT
		
		IF ITEM:CLOTHE
			;シルクのカチューシャはメイド属性の衣服専用
			;その他の属性用アイテムの処理もここに統合
			IF CLOTHE >= 404 && !GETBIT(CLO_ELE, 2+(COUNT-4))
				SETCOLOR 128, 128, 128
				PRINTFORML [{CLOTHE}] - %ITEMNAME:(CLOTHE)%
				RESETCOLOR
				NG:COUNT = 1
			ELSE
				PRINTFORML [{CLOTHE}] - %ITEMNAME:(CLOTHE)%
				NG:COUNT = 0
			ENDIF
		ENDIF
	REND
ELSEIF SET_TAG == 261
	REPEAT 8
		START = 410
		CLOTHE = START + COUNT
		
		IF ITEM:CLOTHE
			;エナメル靴はメイド属性の衣服専用
			;その他の属性用アイテムの処理もここに統合
			IF CLOTHE >= 414 && !GETBIT(CLO_ELE, 2+(COUNT-4))
				SETCOLOR 128, 128, 128
				PRINTFORML [{CLOTHE}] - %ITEMNAME:(CLOTHE)%
				RESETCOLOR
				NG:COUNT = 1
			ELSE
				PRINTFORML [{CLOTHE}] - %ITEMNAME:(CLOTHE)%
				NG:COUNT = 0
			ENDIF
		ENDIF
	REND
ELSEIF SET_TAG == 262
	START = 490
	CLOTHE = 490
	REPEAT 8
		IF ITEM:CLOTHE
			;精液風呂は精飲経験が50以上無いと使えない
			IF CLOTHE == 496 && EXP:精飲経験 < 50
				SETCOLOR 128, 128, 128
				PRINTFORML [{CLOTHE}] - %ITEMNAME:(CLOTHE)%
				RESETCOLOR
				NG:COUNT = 1
			ELSE
				PRINTFORML [{CLOTHE}] - %ITEMNAME:(CLOTHE)%
				NG:COUNT = 0
			ENDIF
		ENDIF
		CLOTHE += 1
	REND
ELSEIF SET_TAG == 263
	REPEAT 9
		START = 420
		CLOTHE = START + COUNT
		
		IF ITEM:CLOTHE
			;無名土史料はメイド属性の衣服専用
			;その他の属性用アイテムの処理もここに統合
			IF CLOTHE >= 424 && CLOTHE < 428 && !GETBIT(CLO_ELE, 2+(COUNT-4))
				SETCOLOR 128, 128, 128
				PRINTFORML [{CLOTHE}] - %ITEMNAME:(CLOTHE)%
				RESETCOLOR
				NG:COUNT = 1
			ELSE
				PRINTFORML [{CLOTHE}] - %ITEMNAME:(CLOTHE)%
				NG:COUNT = 0
			ENDIF
		ENDIF
	REND
ELSEIF SET_TAG == 264 || SET_TAG == 265
	START = 430
	CLOTHE = 430
	REPEAT 16
		IF CLOTHE == 439
			CLOTHE = 500
		ELSEIF CLOTHE == 504
			CLOTHE = 507
		ENDIF
		
		IF ITEM:CLOTHE && !(CFLAG:264 == CLOTHE || CFLAG:265 == CLOTHE)
			;両穴バイブは淫妖経験が180以上でないとできない
			IF EXP:淫妖経験 < 180 && ((CLOTHE == 507 && OTHER_ACC(500)) || (CLOTHE == 500 && OTHER_ACC(507)))
				SETCOLOR 128, 128, 128
				PRINTFORML [{CLOTHE}] - %ITEMNAME:(CLOTHE)%　両穴挿入は淫妖経験が180以上必要
				RESETCOLOR
				NG:COUNT = 1
			;アナルバイブは淫妖経験100以上でないと装着できない
			ELSEIF CLOTHE == 507 && EXP:淫妖経験 < 100
				SETCOLOR 128, 128, 128
				PRINTFORML [{CLOTHE}] - %ITEMNAME:(CLOTHE)%
				RESETCOLOR
				NG:COUNT = 1
			;ガーターベルトはメイド属性の衣服専用
			ELSEIF CLOTHE == 431 && !GETBIT(CLO_ELE, 2)
				SETCOLOR 128, 128, 128
				PRINTFORML [{CLOTHE}] - %ITEMNAME:(CLOTHE)%
				RESETCOLOR
				NG:COUNT = 1
			;退魔の祈祷棒は巫女服専用
			ELSEIF CFLAG:服装 < 0 || (CLOTHE == 432 && !DITEMTYPE:(CFLAG:服装):12)
				SETCOLOR 128, 128, 128
				PRINTFORML [{CLOTHE}] - %ITEMNAME:(CLOTHE)%
				RESETCOLOR
				NG:COUNT = 1
			ELSE
				PRINTFORML [{CLOTHE}] - %ITEMNAME:(CLOTHE)%
				NG:COUNT = 0
			ENDIF
		ENDIF
		CLOTHE += 1
	REND
ENDIF
END = CLOTHE + COUNT
PRINTL [99] - 装飾品を外す
PRINTL [999] - 戻る

$INPUT_LOOP_2
INPUT

IF RESULT >= START && RESULT <= END && ITEM:RESULT
	DRAWLINE
	PRINTFORML ～～%ITEMNAME:RESULT%～～
	LOCAL = RESULT
	PRINT 　
	CALLFORM ITEM_DETAIL_{RESULT}
	
	DRAWLINE
	
	IF (LOCAL >= 500 && NG:(LOCAL-491)) || (LOCAL == 507 && NG:(LOCAL-494)) || (LOCAL < 500 && NG:(LOCAL-START))
		PRINTW 装着するための条件を満たしていません
		GOTO BACK_LOOP_2
	ENDIF
	
	PRINTFORML [%ITEMNAME:LOCAL%]を身に着けさせますか？
	PRINTL [0] - はい
	PRINTL [1] - いいえ
	
	CALL SENTAKUSHI, 2
	
	IF RESULT == 0
		IF CFLAG:SET_TAG
			TEMP = CFLAG:SET_TAG
			CALL ACC_CHECK, SET_TAG, "脱着"
		ENDIF
		CFLAG:SET_TAG = LOCAL
		CALL ACC_CHECK, SET_TAG, "装着"
		IF RESULT == 1
			CFLAG:SET_TAG = TEMP
			CALL ACC_CHECK, SET_TAG, "装着"
			GOTO BACK_LOOP_2
		ENDIF
	ENDIF
	GOTO BACK_LOOP_2
ELSEIF RESULT == 99
	PRINTFORML 装飾品を外しますか？
	LOCAL = RESULT
	PRINTL [0] - はい
	PRINTL [1] - いいえ
	
	CALL SENTAKUSHI, 2
	
	IF RESULT == 0
		CALL ACC_CHECK, SET_TAG, "脱着"
		CFLAG:SET_TAG = 0
	ENDIF
	GOTO BACK_LOOP_2
ELSEIF RESULT == 999
	GOTO BACK_LOOP_1
ELSEIF RESULT < 400
	PRINTL 選択範囲外です
	GOTO INPUT_LOOP_2
ELSE
	PRINTL 条件を満たしていません
	GOTO INPUT_LOOP_2
ENDIF

