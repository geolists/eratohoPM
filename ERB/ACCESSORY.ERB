	VAL = 0
	;シスター属性を持つ
	ELE = 1p3
	LOCAL:1 = 1
ENDIF

IF LOCAL:1
	IF ARGS == "装着"
		saki = BASE:TAG + LOCAL
		CALL CONVERT_ACCE, ARG-260
		CFLAG:("見た目／"+STR+"") = VAL
		CFLAG:("属性／"+STR+"") |= ELE
		IF saki > 1000
			BASE:TAG = 1000
		ELSEIF saki < 0
			PRINTL 能力が足りないので装備することができない
			RETURN 1
		ELSE
			BASE:TAG += LOCAL
		ENDIF
		
		IF TAG:1
			saki = BASE:(TAG:1) + LOCAL
			IF saki > 1000
				BASE:(TAG:1) = 1000
			ELSEIF saki < 0
				PRINTL 能力が足りないので装備することができない
				RETURN 1
			ELSE
				BASE:(TAG:1) += LOCAL
			ENDIF
		ENDIF
	ELSE
		;装飾品を外した後の能力値を先に計算する
		saki = BASE:TAG - LOCAL
		CALL CONVERT_ACCE, ARG-260
		CFLAG:("見た目／"+STR+"") = 0
		CFLAG:("属性／"+STR+"") = 0
		
		;装飾品を外した後に能力が1000以上にならない場合、
		IF saki < 1000 && BASE:TAG < 1000
			BASE:TAG -= LOCAL
		ELSEIF saki > 1000
			BASE:TAG = 1000
		ENDIF
		
		IF TAG:1
			IF BASE:(TAG:1) < 1000
				BASE:(TAG:1) -= LOCAL
			ELSE
				BASE:(TAG:1) = 1000
			ENDIF
		ENDIF
	ENDIF
ENDIF

;-----------------------------------------------------
;華麗度計算
;-----------------------------------------------------
@KAREIDO
LOCAL = 0


FOR COUNT, 0, 6
	CALL CONVERT_ACCE, COUNT
	LOCAL += CFLAG:("見た目／"+STR+"")
NEXT

RETURN LOCAL

;-----------------------------------------------------
;その他のアクセサリー判定
;-----------------------------------------------------
@OTHER_ACC, ARG
#FUNCTION

IF CFLAG:日用品／その他 == ARG || CFLAG:日用品／その他2 == ARG
	LOCAL = 1
ELSE
	LOCAL = 0
ENDIF

RETURNF LOCAL

;-----------------------------------------------------
;装飾品_装備条件
;式中関数　特定の装飾品が装備できるか判定する
;(@CHANGE_ACCESSORYに散らばっている装備条件をこの関数に纏めてもいいが、今後の使用頻度を考えて保留)
;返り値　0:装備できない　1:装備できる
;
;ARG　装備対象のアイテムID
;-----------------------------------------------------
@ABLE_ACC, ARG
#FUNCTION

;返り値格納のためにLOCALを使う
LOCAL = 0

;精液風呂は精飲経験が50以上無いと使えない
IF ARG == 496 && EXP:精飲経験 < 50
	LOCAL = 0
ELSE
	LOCAL = 1
ENDIF


RETURNF LOCAL


