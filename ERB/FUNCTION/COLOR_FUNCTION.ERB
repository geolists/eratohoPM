;*********************************************************************
;文字色変更系関数
;共通して使う事が多い色設定を行う関数
;*********************************************************************

;-----------------------------------------------------------
;文字色保存
;ARG　0：セーブ　1：ロード
;-----------------------------------------------------------
@SAVE_COLOR, ARG
IF !ARG
	GETCOLOR
	LOCAL = RESULT
ELSE
	IF !LOCAL && !LOCAL && !LOCAL
		PRINTFORML 色指定ミス！
	ELSE
		SETCOLOR LOCAL
	ENDIF
ENDIF
RETURN 0


;-----------------------------------------------------------
;金銭系の文字色変更
;-----------------------------------------------------------
@SETCOLOR_MONEY
SETCOLOR 255,196,64
RETURN 0

;-----------------------------------------------------------
;能力系の文字色変更
;ARG　対象の能力
;-----------------------------------------------------------
@SETCOLOR_PALAM, ARG

;能力の上限は1000なので4で割る
LOCAL = ARG / 4

SETCOLOR 192+LOCAL/4,192-LOCAL/4,192-LOCAL*3/4
RETURN 0

