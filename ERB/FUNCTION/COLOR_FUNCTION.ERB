;-----------------------------------------------------------
;属性ごとの文字色
;ARG 0なら属性、1なら服の属性を参照
;-----------------------------------------------------------
@SETCOLOR_ELEMENT,ARG

IF ARG == 0
	IF CFLAG:属性／姫様 >= 50
		SETCOLOR 236,160,160
	ELSEIF CFLAG:属性／メイド >= 50
		SETCOLOR 160,255,255
	ELSEIF CFLAG:属性／シスター >= 50
		SETCOLOR 64,160,255
	ELSEIF CFLAG:属性／ゴスロリ >= 50
		SETCOLOR 128,128,255
	ELSEIF CFLAG:属性／花嫁 >= 50
		SETCOLOR 255,192,128
	ELSEIF CFLAG:属性／淫魔 >= 50
		SETCOLOR 255,64,160
	ELSEIF CFLAG:属性／乞食 >= 50
		SETCOLOR 128,128,128
	ENDIF
ELSE
	CALL CLOTHE_ABL, "属性"

	IF GETBIT(RESULT,1)
		SETCOLOR 236,160,160
	ELSEIF GETBIT(RESULT,2)
		SETCOLOR 160,255,255
	ELSEIF GETBIT(RESULT,3)
		SETCOLOR 64,160,255
	ELSEIF GETBIT(RESULT,4)
		SETCOLOR 128,128,255
	ELSEIF GETBIT(RESULT,5)
		SETCOLOR 255,192,128
	ELSEIF GETBIT(RESULT,6)
		SETCOLOR 255,64,160
	ELSEIF GETBIT(RESULT,7)
		SETCOLOR 128,128,128
	ENDIF
ENDIF


