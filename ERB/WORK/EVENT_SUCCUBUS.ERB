@MOVE_SUCCUBUS_6

;淫妖の数値よって分岐
;(300毎に)
LOCAL = BASE:淫妖 / 300

IF LOCAL == 3
	PRINTFORML 
ELSEIF LOCAL == 2
	PRINTFORML 
ELSEIF LOCAL == 1
	PRINTFORML 
ELSE
	PRINTFORML 
ENDIF

