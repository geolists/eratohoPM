@ABL_NAME, ARG
#FUNCTIONS
#LOCALSSIZE 6
SIF LOCALS == ""
	SPLIT "美麗_知力_疎通_家事_信仰_淫妖", "_", LOCALS
RETURNF LOCALS:ARG

