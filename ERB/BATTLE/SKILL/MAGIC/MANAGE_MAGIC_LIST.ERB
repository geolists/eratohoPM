;================================
;使用可能な魔術表示関数
;ARG　配列(0～5番目まで用意)
;================================
@LIST_MAGICMOVE, ARG
#FUNCTION

;LOCALに配列を代入するので、まずは初期化
VARSET LOCAL, -1

;ゴスロリ属性が10％以上でないと魔術は使用できない
IF CFLAG:属性／ゴスロリ < 10
	RETURNF -1
ENDIF

;ファイアショット
LOCAL:0 = 40

;ゴスロリ属性が20％以上
IF CFLAG:属性／ゴスロリ >= 20
	;フリーズブラスト
	LOCAL:1 = 41
ENDIF
;ゴスロリ属性が30％以上
IF CFLAG:属性／ゴスロリ >= 30
	;スネークポイズン
	LOCAL:2 = 42
ENDIF

;正道のゴスロリLv1以上
IF CFLAG:称号レベル >= 1 && CFLAG:称号属性 == 3 && CFLAG:称号アライメント == 0
	;サンダーシュート
	LOCAL:3 = 43
ENDIF
;正道のゴスロリLv2以上
IF CFLAG:称号レベル >= 2 && CFLAG:称号属性 == 3 && CFLAG:称号アライメント == 0
	;マジックストーム
	LOCAL:4 = 44
ENDIF
;邪道のゴスロリLv1以上
IF CFLAG:称号レベル >= 1 && CFLAG:称号属性 == 3 && CFLAG:称号アライメント == 2
	;欲情の香り
	LOCAL:3 = 46
ENDIF
;邪道のゴスロリLv2以上
IF CFLAG:称号レベル >= 2 && CFLAG:称号属性 == 3 && CFLAG:称号アライメント == 2
	;蛙変化
	LOCAL:4 = 47
ENDIF



RETURNF LOCAL:ARG

