;===========================================
;淫術スキル
;今のところ愛撫と媚薬臭のみ実装
;ARG　リスト参照者
;===========================================
@NINFO_SKILL, ARG
;使えるスキルの種類
;0だと使える特技が無いと出して返す
#DIM parm, 1

VARSET LOCAL, 0
$BACK_LOOP
parm = 0
DRAWLINE
IF TALENT:淫魔
	PRINTL ○淫魔
	PRINTL [50] - 媚薬の香り
	LOCAL:50 = 1
	PRINTL [51] - 不気味な笑み
	LOCAL:51 = 1
	PRINTL [52] - 吸精のキス
	LOCAL:52 = 1
	DRAWLINE
ENDIF
IF TALENT:娼婦
	PRINTL ○娼婦
	PRINTL [60] - 胸愛撫
	LOCAL:60 = 1
	PRINTL [61] - 誘い受け
	LOCAL:61 = 1
	PRINTL [62] - 押し倒す
	LOCAL:62 = 1
	PRINTL [63] - 乱交
	LOCAL:63 = 1
	PRINTL [64] - 服脱がし
	LOCAL:64 = 1
	PRINTL [65] - 自己満足
	LOCAL:65 = 1
	DRAWLINE
ENDIF
PRINTFORML [100] - 愛撫
PRINTFORML [997] - 淫魔特技の説明
PRINTFORML [998] - 娼婦特技の説明
PRINTFORML [999] - 戻る

$INPUT_LOOP
INPUT

IF RESULT >= 50 && RESULT <= 69 && LOCAL:RESULT
	CALLFORM NINFO_SKILL_{RESULT}
	IF RESULT == -1
		GOTO BACK_LOOP
	ENDIF
ELSEIF RESULT == 100
	CALL PETTING, 0
	IF RESULT == -1
		GOTO BACK_LOOP
	ENDIF
ELSEIF RESULT == 997
	CALL SHOW_SUCCU_SKILL
	GOTO BACK_LOOP
ELSEIF RESULT == 998
	CALL SHOW_NINFO_SKILL
	GOTO BACK_LOOP
ELSEIF RESULT == 999
	RETURN -1
ELSE
	PRINTL 入力が不正です
	GOTO INPUT_LOOP
ENDIF
