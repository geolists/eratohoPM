CALL SENTAKUSHI, 2

IF RESULT == 1
	RETURN -1
ENDIF

TFLAG:(530+ARG) = RESULT
TFLAG:(536+ARG) = 63

@ATTACK_MOVE_63, ARG
#DIM L_LOCAL, 1

PRINTFORML %STR:ARG%は%STR:(TFLAG:(530+ARG))%達と身体を交わらせ
PRINTFORML 相手の意思を無視して淫蕩な時間を過ごした……

FOR L_LOCAL, 0, 6
	;現HPがある場合、ダメージ判定を行う
	IF TFLAG:(556+L_LOCAL*10)
		IF L_LOCAL == ARG
			CALL DAMAGE_CALCULATION, 2, 40, -1, ARG, L_LOCAL, 2, 0
		ELSE
			CALL DAMAGE_CALCULATION, 2, 120, 95, ARG, L_LOCAL, 2, 2
		ENDIF
	ENDIF
NEXT

;------------------------------
;74:　服脱がし
;押し倒したか欲情or気力が1/2を越える(小さくなる)相手にしか効かない
;------------------------------
@NINFO_SKILL_64, ARG

CALL BATTLE_ATTACK, 0, TFLAG:敵の数, ARG
IF RESULT == -1
	RETURN -1
ENDIF
TFLAG:(530+ARG) = RESULT
TFLAG:(536+ARG) = 64

@ATTACK_MOVE_64, ARG
PRINTFORML %STR:ARG%は%STR:(TFLAG:(530+ARG))%の衣服を脱がそうとした！

;相手の気力と欲情が共に規定値に達していない、あるいは押し倒している必要がある
IF TFLAG:(557+TFLAG:(530+ARG)*10)*2 > TFLAG:(551+TFLAG:(530+ARG)*10) && TFLAG:(506+TFLAG:(530+ARG))*2 < TFLAG:(524+TFLAG:(530+ARG)) && !IJYOU_BATTLE(TFLAG:(530+ARG))
	PRINTFORML しかし、相手の抵抗が激しく、脱がす事ができなかった！
	PRINTFORML 気力か欲情を半分以下(以上)にする、あるいは押し倒しておく必要がありそうだ
	
	CALL DAMAGE_CALCULATION, 3, 0, -1, ARG, TFLAG:(530+ARG), 0, 1000
ELSE
	;相手の服を1段階脱がせる
	CALL DAMAGE_CALCULATION, 3, 0, -1, ARG, TFLAG:(530+ARG), 0, 6
ENDIF


