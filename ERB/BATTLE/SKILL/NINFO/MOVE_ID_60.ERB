;------------------------------
;60:　胸愛撫
;------------------------------
@NINFO_SKILL_60, ARG

CALL BATTLE_ATTACK, 0, TFLAG:敵の数, ARG
IF RESULT == -1
	RETURN -1
ENDIF
TFLAG:(530+ARG) = RESULT
TFLAG:(536+ARG) = 60

@ATTACK_MOVE_60, ARG
PRINTFORML %STR:ARG%は%STR:(TFLAG:(530+ARG))%の胸を愛撫した
;基礎威力50
LOCAL = 50

;相手の欲情が1/2以下の場合、威力が2倍に
IF TFLAG:(506+TFLAG:(530+ARG)) * 2 <= TFLAG:(524+TFLAG:(530+ARG))
	LOCAL *= 2
ENDIF
CALL DAMAGE_CALCULATION, 2, LOCAL, 100, ARG, TFLAG:(530+ARG), 2, 0

