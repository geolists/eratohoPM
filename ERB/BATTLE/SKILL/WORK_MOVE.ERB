;==========================================
;400～　属性固有技
;==========================================
;-----------------------------------------
;408, 月影の矢
;穢れの地(地上)に居る場合のみ使用可能
;敵1体に攻撃する特殊技。命中した敵の気力を最大値の30％削る
;-----------------------------------------
@ELE_SKILL_408, ARG

CALL BATTLE_ATTACK, 0, TFLAG:敵の数
IF RESULT == -1
	RETURN -1
ENDIF
TFLAG:(530+ARG) = RESULT
TFLAG:(536+ARG) = 408

@ATTACK_MOVE_408, ARG
PRINTFORML %STR:ARG%は月影の矢を放った！
PRINTFORML 月より得た神聖なる力が、地上の穢れを薙ぎ払う！
;命中率が低めな技のため、気力消費は追加効果で処理する
CALL DAMAGE_CALCULATION, 1, 100, 80, ARG, TFLAG:(530+ARG), 0, 53, 30-((CFLAG:属性／姫様)/100)

;必殺技ゲージを0にする
TFLAG:必殺技ゲージ = 0

;-----------------------------------------
;409, 真・月影の矢
;穢れの地(地上)に居る場合のみ使用可能
;須臾の間に発射するため、優先度+1
;敵1体に攻撃する特殊技。命中した敵の気力を最大値の30％削る
;-----------------------------------------
@ELE_SKILL_409, ARG

CALL BATTLE_ATTACK, 0, TFLAG:敵の数
IF RESULT == -1
	RETURN -1
ENDIF
TFLAG:(530+ARG) = RESULT
TFLAG:(536+ARG) = 409

@ATTACK_MOVE_409, ARG
PRINTFORML %STR:ARG%は真・月影の矢を放った！
PRINTFORML 須臾の間に放たれた光線が、敵目がけて飛んでいく！
;命中率が低めな技のため、気力消費は追加効果で処理する
CALL DAMAGE_CALCULATION, 1, 130, 90, ARG, TFLAG:(530+ARG), 0, 53, 30-((CFLAG:属性／姫様)/100)

;必殺技ゲージを0にする
TFLAG:必殺技ゲージ = 0


;-----------------------------------------
;410, 仕立て上げる
;相手が女性で精霊や淫魔でない場合、メイドにする
;相手の名称固有スキルを無力化できるため非常に強力だが、使える場面が少ない
;-----------------------------------------
@ELE_SKILL_410, ARG

CALL BATTLE_ATTACK, 0, TFLAG:敵の数
IF RESULT == -1
	RETURN -1
ENDIF
TFLAG:(530+ARG) = RESULT
TFLAG:(536+ARG) = 410

@ATTACK_MOVE_410, ARG
PRINTFORML %STR:ARG%は%STR:(TFLAG:(530+ARG))%の背後に回り、着替えさせようと試みた！
CALL DAMAGE_CALCULATION, 3, 0, 90, ARG, TFLAG:(530+ARG), 0, 48, 6


;=========================================================
;武器/属性固有技　解説
;=========================================================
@SHOW_WEAPON_ELE_SKILL

;表示項目数をLOCALに記録する
;LOCALを初期化
VARSET LOCAL, 0

DRAWLINE
PRINTFORML ○武器/属性固有技一覧
;エクシーの弓を装備している
IF CFLAG:装備 == 580
	PRINTFORML 　純化の儀　　　　　　変化　消費気力:6　　相手の肩書きを消す
	LOCAL += 1
ENDIF

;ヤグの弓を装備している
IF CFLAG:装備 == 581
	PRINTFORML 　ヤグショット　　　　物理　消費気力:7　　相手を損傷状態にする
	LOCAL += 1
ENDIF

;ヤグの弓を装備している
IF CFLAG:装備 == 583
	PRINTFORML 　メモリーライト　　　変化　消費気力:4　　相手の行動を通常攻撃に変える
	LOCAL += 1
ENDIF

;月夜見の太刀を装備している
IF CFLAG:装備 == 585
	PRINTFORML 　夜の帳　　　　　　　変化　消費気力:2　　相手の気力を最大気力の10％減少させる
	LOCAL += 1
ENDIF

;ステージが地上で、且つ他の属性素質([メイド]など)を持っていない場合
;月影の矢を使用できる
IF TFLAG:必殺技ゲージ >= 6 && TALENT:輝夜 && INRANGE(FLAG:武者修行マップ, 30, 39)
	PRINTFORML 　月影の矢　　　　　　特殊　消費気力:{30-CFLAG:属性／姫様}　　追加効果として、相手の気力を最大気力の30％減少させる
	LOCAL += 1
ENDIF


;メイドLv2以上の称号を持ち、現在の肩書きが"メイド"である場合
IF STR:6 == "メイド" && CFLAG:称号属性 == 1 && CFLAG:称号レベル >= 2
	PRINTFORML 　仕立て上げる　　　　変化　消費気力:6　　相手が女性の場合、肩書きを[メイド]に変える
	LOCAL += 1
ENDIF

