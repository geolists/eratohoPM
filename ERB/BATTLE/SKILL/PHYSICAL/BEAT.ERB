;------------------------------
;70:　強打
;威力は高いが命中が若干悪い
;20％の確率で相手を怯ませる
;------------------------------
@BEAT_SKILL_70, ARG

CALL BATTLE_ATTACK, 0, TFLAG:敵の数, ARG
IF RESULT == -1
	RETURN -1
ENDIF
TFLAG:(530+ARG) = RESULT
TFLAG:(536+ARG) = 70

@ATTACK_MOVE_70, ARG
PRINTFORML %STR:ARG%は%STR:(TFLAG:(530+ARG))%を強打した！
CALL DAMAGE_CALCULATION, 0, 130, 75, ARG, TFLAG:(530+ARG), 0, 29, 2, 20

;------------------------------
;71:　骨砕き
;高い威力と命中を持つが粘性体には効かない
;------------------------------
@BEAT_SKILL_71, ARG

CALL BATTLE_ATTACK, 0, TFLAG:敵の数, ARG
