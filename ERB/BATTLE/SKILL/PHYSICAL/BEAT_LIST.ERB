@BEAT_SKILL, ARG
;使えるスキルの種類
;0だと使える特技が無いと出して返す
#DIM parm, 1

VARSET LOCAL, 0
$BACK_LOOP
parm = 0
DRAWLINE
PRINTL [70] - 強打
LOCAL:70 = 1
PRINTL [71] - 骨砕き
LOCAL:71 = 1
PRINTL [72] - 振り下ろし
LOCAL:72 = 1
DRAWLINE
DRAWLINE
PRINTFORML [997] - 打術特技の説明
PRINTFORML [999] - 戻る

$INPUT_LOOP
INPUT

IF RESULT >= 70 && RESULT <= 79 && LOCAL:RESULT
	CALLFORM BEAT_SKILL_{RESULT}
	IF RESULT == -1
		GOTO BACK_LOOP
	ENDIF
ELSEIF RESULT == 997
	CALL SHOW_BEAT_SKILL
	GOTO BACK_LOOP
ELSEIF RESULT == 999
	RETURN -1
ELSE
	PRINTL 入力が不正です
	GOTO INPUT_LOOP
ENDIF
