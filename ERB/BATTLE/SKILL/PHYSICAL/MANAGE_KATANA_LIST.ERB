;================================
;使用可能な刀術表示関数
;ARG　配列(0～5番目まで用意)
;================================
@LIST_KATANAMOVE, ARG
#FUNCTION

;LOCALに配列を代入するので、まずは初期化
VARSET LOCAL, -1

;二刃斬り
LOCAL:0 = 80
;凶殺陣
LOCAL:1 = 81
;精神統一
LOCAL:2 = 83

;諸刃の剣術は武士称号Lv1以上限定
IF CFLAG:称号レベル == 1 && CFLAG:称号属性 == 7
	LOCAL:3 = 82
ENDIF
;雪辱の太刀は武士称号Lv2以上限定
IF CFLAG:称号レベル == 2 && CFLAG:称号属性 == 7
	LOCAL:4 = 84
ENDIF
;剣の舞は正道の武士Lv3以上限定
IF CFLAG:称号レベル == 3 && CFLAG:称号属性 == 7 && CFLAG:称号アライメント == 0
	LOCAL:5 = 84
ENDIF
;騙し討ちは邪道の武士Lv3以上限定
IF CFLAG:称号レベル == 3 && CFLAG:称号属性 == 7 && CFLAG:称号アライメント == 2
	LOCAL:5 = 86
ENDIF

;正道の武士道には状態異常を跳ねのける刃技を追加する予定(気力は10％消費)
;邪道の武士道には相手の魔力を使ってダメージ計算をする技等を追加する予定


RETURNF LOCAL:ARG

