	IF TFLAG:100 > 0
		CALL CHARA_LIST
		REPEAT 30
			A = COUNT + TFLAG:100 * 30 + 200 - 30
			B = TFLAG:A
			ITEMSALES:B = 1
		REND
		TFLAG:100 -= 1
	ENDIF
	;バグ対策。キャラ上限を超えるとITEMSALES:0が登録されるので
	ITEMSALES:0 = 0

	CALL START_CHARA_SHOW
	GOTO INPUT_LOOP
ELSEIF RESULT == 9
	;最大ページ数と比較、ページ数変動の際は
	IF TFLAG:100 < 3
		CALL CHARA_LIST
		REPEAT 30
			A = COUNT + TFLAG:100 * 30 + 200 + 30
			B = TFLAG:A
			ITEMSALES:B = 1
		REND
		TFLAG:100 += 1
	ENDIF
	;バグ対策。キャラ上限を超えるとITEMSALES:0が登録されるので
	ITEMSALES:0 = 0

	CALL START_CHARA_SHOW
	GOTO INPUT_LOOP
ELSEIF RESULT == 0
	CALL CHARA_BUY_AFTER
ELSE
	C = RESULT + 1 - 100
	D = RESULT + 1000 - 100
	E = RESULT + 5000 - 100
